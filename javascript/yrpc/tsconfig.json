{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "sourceMap": false,
    "declaration": true,
    "lib": [
      "dom",
      "es5",
      "esnext"
    ],
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ]
}
